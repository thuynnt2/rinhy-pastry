<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/tailwindCommon.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/app.css">
    <title>Rinhy Pastry</title>
</head>

<body>

    <div class="app">

        <%- include('../patrials/header'); %>

            <section class="poster relative">
                <div class="poster__background"></div>
                <div class="poster__content absolute top-0 pt-20 w-full h-full flex justify-center items-center">
                    <!-- <h1 class="border-solid border-2 border-black rounded-md p-3">POSTER CONTENT</h1> -->
                </div>
            </section>

            <section class="home__title">
                <hr>
                <span>Sản phẩm nổi bật</span>
                <hr>
            </section>

            <section class="home__products grid grid-cols-4 gap-4" id="productsHot">

            </section>

            <section class="home__title">
                <hr>
                <span>Các loại bánh chính</span>
                <hr>
            </section>

            <section class="home__category relative h-[54rem]">
                <div class="cate__bg"></div>
                <div class="cate__container absolute inset-x-0 top-32 mx-auto">
                    <div class="grid grid-cols-3" id="categoryThumbnail">
                        
                        <div class="cate--content relative flex flex-col items-center mb-3">
                            <a href="/shop">
                                <div class="thumbnail overflow-hidden h-[335px] w-[335px] thumbnail-end flex flex-wrap">
                                    <img src="/images/products/tiramisu-chanh.png" alt="">
                                    <img src="/images/products/pancake-socola.png" alt="">
                                    <img src="/images/products/macaron-dua.png" alt="">
                                    <img src="/images/products/donut-cam.png" alt="">
                                </div>
                                <div class="content__hover absolute top-0 left-[0.4rem] items-center justify-center">
                                    <span class="text-3xl">Tất cả</span>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </section>

            <section class="home__action mb-12">
                <div class="w-[65.375rem] mx-auto grid grid-cols-3">
                    <a href="" class=" flex flex-col text-center py-7 border-r-black border-r-2">
                        <i class='bx bxs-cake bx-lg '></i>
                        <span class="mt-3 text-2xl">Đặt bánh theo yêu cầu</span>
                    </a>
                    <a href="" class=" flex flex-col text-center py-7 border-r-black border-r-2">
                        <i class='bx bxs-truck bx-lg '></i>
                        <span class="mt-3 text-2xl">Giao hàng nhanh</span>
                    </a>
                    <a href="" class=" flex flex-col text-center py-7 ">
                        <i class='bx bxs-discount bx-lg '></i>
                        <span class="mt-3 text-2xl">Mã giảm giá</span>
                    </a>
                </div>
            </section>

            <%- include ('../patrials/footer.ejs')%>

    </div>

    <script src="/javascript/product.js"></script>
    <script src="/javascript/category.js"></script>
    <script>
        getProductsHot("productsHot");
        getCategoryThumbnail("categoryThumbnail");
    </script>
</body>

</html>